{
  "manifest_version": 3,
  "name": "OpenAI Web Translator (VN)",
  "version": "1.15",
  "description": "Dịch toàn bộ trang web sang tiếng Việt sử dụng OpenAI API, cố gắng giữ nguyên thuật ngữ IT.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icon.png",
    "default_title": "Dịch trang này (OpenAI)"
  },
  "options_page": "options.html"
}

